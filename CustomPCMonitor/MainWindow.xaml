<Window x:Class="CustomPCMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="#FF5A5A5A">

    <Grid>
        <Grid x:Name="CustomTitleBar" Background="#2e2e2e" Height="25" VerticalAlignment="Top" MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Menu Background="Transparent" Foreground="White" FontSize="14" Grid.Column="0" VerticalContentAlignment="Center">
                <MenuItem Header="_File">
                    <MenuItem Header="New" Click="NewFile_Click" />
                    <MenuItem Header="Open..." Click="OpenFile_Click" />
                    <MenuItem Header="Save" Click="SaveFile_Click" />
                    <Separator />
                    <MenuItem Header="Exit" Click="Exit_Click" />
                </MenuItem>
                
                <MenuItem Header="_Edit">
                    <MenuItem Header="Undo" Click="Undo_Click" />
                    <MenuItem Header="Redo" Click="Redo_Click" />
                </MenuItem>

                <MenuItem Header="_Help">
                    <MenuItem Header="About" Click="About_Click" />
                </MenuItem>
            </Menu>

            <Button Content="&#x1F5D5;" 
                Width="30"  
                Grid.Column="2" 
                Background="Transparent" 
                Foreground="White" 
                Click="Minimize_Click" BorderBrush="{x:Null}" />

            <Button Content="&#x1F5D6;" 
                    Width="30"  
                    Grid.Column="3" 
                    Background="#00000000" 
                    Foreground="#FF787878" BorderBrush="{x:Null}"/>
            <!--Click="Maximize_Click" BorderBrush="{x:Null}"-->

            <Button Content="&#x2715;" 
                    Width="30"  
                    Grid.Column="4" 
                    Background="Transparent" 
                    Foreground="White" 
                    Click="Close_Click" BorderBrush="{x:Null}" />
        </Grid>

        <Label Content="Custom PC Monitor" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontSize="48" 
               Foreground="White" Margin="0,72,0,0" />

        <Border BorderBrush="White" 
                BorderThickness="1" 
                Margin="266,186,266,186"
                CornerRadius="5"
                MouseLeftButtonDown="NewFile_Click">
                <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF2E2E2E" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
                <Label Content="Start" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>
        </Border>

        <Border BorderBrush="White" 
                BorderThickness="1" 
                Margin="266,269,266,103"
                CornerRadius="5">
                <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF2E2E2E" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
                <Label Content="Open" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>
        </Border>

        <Border BorderBrush="White" 
                BorderThickness="1" 
                Margin="266,352,266,20"
                CornerRadius="5"
                MouseLeftButtonDown="Close_Click">
                <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF2E2E2E" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
                <Label Content="Exit" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="White"/>
        </Border>
    </Grid>
</Window>