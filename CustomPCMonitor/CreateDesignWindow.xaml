<Window x:Class="CustomPCMonitor.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Design Window" 
        Height="400" 
        Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#FF5A5A5A">
    <Grid>
        <!-- Custom Title Bar -->
        <Grid x:Name="CustomTitleBar" Background="#2e2e2e" Height="25" VerticalAlignment="Top" MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- For Menu -->
                <ColumnDefinition Width="*" />
                <!-- Spacer -->
                <ColumnDefinition Width="Auto" />
                <!-- Minimize Button -->
                <ColumnDefinition Width="Auto" />
                <!-- Maximize Button -->
                <ColumnDefinition Width="Auto" />
                <!-- Close Button -->
            </Grid.ColumnDefinitions>

            <!-- Menu Bar -->
            <Menu Background="Transparent" Foreground="White" FontSize="14" Grid.Column="0" VerticalContentAlignment="Center">
                <MenuItem Header="_File">
                    <MenuItem Header="New" Click="NewFile_Click" />
                    <MenuItem Header="Open..." Click="OpenFile_Click" />
                    <MenuItem Header="Save" Click="SaveFile_Click" />
                    <Separator />
                    <MenuItem Header="Exit" Click="Exit_Click" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="Undo" Click="Undo_Click" />
                    <MenuItem Header="Redo" Click="Redo_Click" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="About" Click="About_Click" />
                </MenuItem>
            </Menu>

            <!-- Minimize Button -->
            <Button Content="&#x1F5D5;" 
                    Width="30"  
                    Grid.Column="2" 
                    Background="Transparent" 
                    Foreground="White" 
                    Click="Minimize_Click" />

            <!-- Maximize/Restore Button -->
            <Button Content="&#x1F5D6;" 
                    Width="30"  
                    Grid.Column="3" 
                    Background="Transparent" 
                    Foreground="White" 
                    Click="Maximize_Click" />

            <!-- Close Button -->
            <Button Content="&#x2715;" 
                    Width="30"  
                    Grid.Column="4" 
                    Background="Transparent" 
                    Foreground="White" 
                    Click="Close_Click" />
        </Grid>

        <!-- Main Content -->
        
        
    </Grid>
</Window>
